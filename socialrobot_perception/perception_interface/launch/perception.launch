    <node pkg="tf"
        type="static_transform_publisher"
        name="base_to_cam"
        args="-0.05373692  0.03228047  1.10943806
                0.58899471 -0.55459358  0.40502386 -0.42215926
                base_footprint perception_link 100" />-->

    <!-- KIST tf between head_pitch and camera 
    <node pkg="tf"
        type="static_transform_publisher"
